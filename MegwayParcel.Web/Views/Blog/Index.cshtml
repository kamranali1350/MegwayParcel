@model List<MegwayParcel.Common.Data.Blog>
@using Newtonsoft.Json;
@using MegwayParcel.Common
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Blog";
    Layout = "/Views/Shared/_NewLayout.cshtml";
}

<!-- **************** MAIN CONTENT START **************** -->
<main>


    <section class="pt-0 pt-sm-5">
        <div class="container">

            <!-- Title -->
            <div class="row mb-4">
                <div class="col-12 text-center">
                    <h2 class="mb-0">Latest Article</h2>
                </div>
            </div>

            <!-- Blog grid -->
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <!-- Blog item START -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card bg-transparent">
                            <!-- Image -->
                            <div class="position-relative">
                                <img src="@item.ImageUrl" class="card-img" alt="">
                                <!-- Badge -->
                                <div class="card-img-overlay p-3">
                                    <a href="#" class="badge text-bg-warning mb-2">@item.AuthorName</a>
                                </div>
                            </div>

                            <!-- Card body -->
                            <div class="card-body p-3 pb-0">
                                <!-- Title -->
                                <h5 class="card-title mt-2"><a href="/Blog/Details/@item.Prefix">@item.Title</a></h5>
                                <h6 class="fw-light mb-0">By <a href="/Blog/Details/@item.Prefix">@(Convert.ToDateTime(item.CreatedDate).ToString("dd/MM/yyyy"))</a></h6>
                            </div>
                        </div>
                    </div>
                    <!-- Blog item END -->
                }



            </div>

            <!-- Buttons -->
            <div class="text-center mt-4">
                <a href="#" class="btn btn-primary-soft mb-0">Load more<i class="fas fa-sync ms-2"></i></a>
            </div>
        </div>
    </section>


</main>
<!-- **************** MAIN CONTENT END **************** -->
